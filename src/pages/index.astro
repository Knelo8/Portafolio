    </ul>
  </SectionConteiner>
  <SectionConteiner id="experiencia">
    <h2 class="text-3xl font-semibold text-white mb-6 gap-3 flex items-center">
      <Briefcase class="size-8" />
      Experiencia laboral
    </h2>
    <Experiencia />
  </SectionConteiner>
  <section id="projects" class="py-24 mx-auto px-4 w-full">
      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-semibold text-white mb-6 gap-3 flex items-center">
          <DevIcon class="size-8" />
          Proyectos
        </h2>
        
        <Proyectos />

      </div>
    </section>
  
  
</main>
